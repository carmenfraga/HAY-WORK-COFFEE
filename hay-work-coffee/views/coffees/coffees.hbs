<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">

            <h2>Coffeeshops</h2>

            <hr>

            {{#each coffees}}

            <div class="mb-5 d-flex justify-content-center">
                <div class="card bg-white" style="width: 18rem;">
                    <img class="mb-2" src="{{image}}" class="card-img-top" alt="{{name}}">
                    <div class="card-body">
                        <a class="card-title btn btn-dark mb-2 p-2" href="/coffees/{{id}}">{{name}}</a>
                    </div>
                </div>
            </div>
            {{/each}}

            <a href="/" class="btn btn-dark">Home</a>

        </div>

        <div class="col-md-6">

            <figure id="coffeesMap"></figure>
            {{!-- <input id="searchInput" class="controls" type="text" placeholder="Enter a location"> --}}
