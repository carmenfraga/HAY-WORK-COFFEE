<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Your Profile, {{user.username}}</h1>
            <hr>
            <form action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" value="{{user.username}}">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                </div>
                <div class="mb-3">
                    <label for="avatar" class="form-label">Profile Image</label>
                    <input type="file" class="form-control" id="avatar" name="avatar" value="{{user.avatar}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description"
                        value="{{user.description}}">
                </div>
                <div class="mb-3">
                    <label for="coffee" class="form-label">Favorite Coffeeshops</label>
                    <select name="coffee" id="coffee">
                        {{#each coffees}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-dark">Save Changes</button>
                <a href="/profile" class="btn btn-dark">Back to My Profile</a>
            </form>
            <hr>
        </div>
    </div>
</div>